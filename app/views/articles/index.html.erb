<div class="jumbotron center" style="margin-left: auto; margin-right: auto; width: 700px; background-color: transparent" >
  <h1> Articles </h1>
  <%= link_to 'Create new article', new_article_path, class: 'btn btn-secondary'%>
  <br><br>
  <% @articles.each do |article| %>
    <div class="card text-center">
      <div class="card-body">
            <h5 class="card-title"> <%= link_to article.title, article_path(article)%> </h5>
            <p class="card-text"> <%=  truncate(article.description, length: 100) %> </p>
            <%= link_to 'Edit', edit_article_path(article) , class: 'btn btn-primary' %>
            <%= link_to 'Delete',  article_path(article), method: :delete, data: { confirm:"Are you sure you want to delete the article?"}, class: 'btn btn-danger' %>
      </div>
    </div>
    <% end %>
</div>