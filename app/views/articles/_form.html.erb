<div class="center jumbotron formjumbotron" style="margin-left: auto; margin-right: auto; width: 700px;" >
<form>
    <%= form_for @article do |f| %>
      <div class="form-group">
        <div class="col-xs-12">
        <%= f.text_field :title, rows:1, class: "form-control", placeholder: "Title" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-12">
        <%= f.text_area :description, rows:10, class: "form-control", placeholder: "Description" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-danger btn-lg" %>
      </div>
    <% end %>
</form>
    <% if @article.errors.any? %>
      <h2>The following error prevented the article from getting created</h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li> <%= msg %> </li>
        <% end %>
      </ul>
    <% end %>
  <div>
    [ <%= link_to 'Cancel creating and return back to article listing', articles_path %> ]
  </div>
</div>